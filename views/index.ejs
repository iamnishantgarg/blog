<%include ./navbar%>
<div class="container-fluid">
  <%if(posts.length==0){%>
  <h3 class="text-center mt-4">No Posts yet</h3>
  <%}else{%> <%for(var i=posts.length-1;i>=0;i--){%>
  <div
    class="container mt-5"
    style="
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
        0 6px 20px 0 rgba(0, 0, 0, 0.19);
    "
  >
    <div class="row post">
      <div class="col-md-1">
        <img
          src="<%=posts[i].pic%>"
          class="mt-2"
          alt=""
          style="
            width: 40px;
            height: 40px;
            border: 1px solid transparent;
            border-radius: 100%;
          "
        />
      </div>
      <div class="col-md-11 d-flex align-items-center">
        <h3 class="d-block my-auto"><%=posts[i].author%></h3>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="col">
        <a
          data-toggle="collapse"
          href="#<%=posts[i]._id%>"
          role="button"
          aria-expanded="false"
          aria-controls="<%=posts[i]._id%>"
        >
          <h3><%=posts[i].title%></h3>
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="collapse" id="<%=posts[i]._id%>">
          <%-posts[i].content%>
        </div>
      </div>
    </div>
    <hr />

    <hr />
    <div class="row">
      <div class="col"><b>POSTED ON:</b><%=posts[i].date%></div>
    </div>
  </div>
  <%}}%>
</div>
