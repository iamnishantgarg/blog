<%include ./navbar%>
<link rel="stylesheet" href="css/signup.css" />
<div class="container">
  <div class="row justify-content-center">
    <div class="col justify-content-center my-3">
      <img src="img/signup.png" alt="login" class="signup-img" />
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xs-8 col-md-6 md-xs-4 md-lg-0">
      <%include ./side/messages%>
    </div>
  </div>

  <div class=" row justify-content-center">
    <div class="col-xs-8 col-md-6 card md-xs-4 md-lg-0">
      <form action="/signup" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="exampleInputName1">Full name</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputName1"
            placeholder="Enter Your Name"
            name="name"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            placeholder="Enter email"
            name="email"
          />
          <small id="emailHelp" class="form-text text-muted"
            >We'll never share your email with anyone else.</small
          >
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            placeholder="Password"
            name="password1"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword2">Confirm Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword2"
            placeholder="Confirm Password"
            name="password2"
          />
        </div>
        <div class="form-group">
          <label for="profileImg">Select Profile Pic</label>
          <input
            type="file"
            class="form-control"
            id="ProfileImg"
            placeholder="Profile Pic"
            name="profileImg"
          />
        </div>
        <button type="submit" class="btn btn-primary px-3 mb-1">
          Register
        </button>
      </form>
    </div>
  </div>
</div>
